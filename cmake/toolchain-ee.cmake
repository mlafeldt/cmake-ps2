INCLUDE(CMakeForceCompiler)

SET(CMAKE_SYSTEM_NAME PS2)
SET(CMAKE_SYSTEM_PROCESSOR EE)

CMAKE_FORCE_C_COMPILER(ee-gcc GNU)
CMAKE_FORCE_CXX_COMPILER(ee-g++ GNU)

SET(PS2DEV $ENV{PS2DEV})
IF (NOT PS2DEV)
    SET(PS2DEV /usr/local/ps2dev)
ENDIF (NOT PS2DEV)

IF (NOT EXISTS ${PS2DEV}/ee)
    MESSAGE(FATAL_ERROR "EE dev tools not found.")
ENDIF (NOT EXISTS ${PS2DEV}/ee)

SET(CMAKE_FIND_ROOT_PATH ${PS2DEV}/ee)

SET(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
SET(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
SET(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
